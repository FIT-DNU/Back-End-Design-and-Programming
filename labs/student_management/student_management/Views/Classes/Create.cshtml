@model student_management.Models.Class

@{
    ViewData["Title"] = "Thêm lớp học mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách lớp học</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-plus-circle"></i> Thêm lớp học mới
            </h1>
            <p class="text-muted">Nhập thông tin lớp học vào form bên dưới</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard-data"></i> Thông tin lớp học</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" id="createClassForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="bi bi-building text-primary"></i> @Html.DisplayNameFor(model => model.Name)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Nhập tên lớp học" required />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label fw-bold">
                                    <i class="bi bi-card-text text-primary"></i> @Html.DisplayNameFor(model => model.Description)
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả về lớp học (không bắt buộc)"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-2 justify-content-between flex-wrap">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-save"></i> Lưu lớp học
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
