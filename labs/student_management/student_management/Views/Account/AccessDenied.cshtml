@{
    ViewData["Title"] = "Truy cập bị từ chối";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="bi bi-shield-exclamation text-danger" style="font-size: 80px;"></i>
    </div>
    
    <h2 class="fw-bold text-danger mb-3">
        Truy cập bị từ chối
    </h2>
    
    <p class="text-muted mb-4 fs-5">
        Bạn không có quyền truy cập vào trang này.
    </p>
    
    <div class="d-flex gap-3 justify-content-center flex-wrap mt-4">
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-auth btn-lg px-4">
            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
        </a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-success btn-auth btn-lg px-4">
            <i class="bi bi-person-plus"></i> Đăng ký
        </a>
    </div>
</div>
