@model student_management.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-header">
    <h2>
        <i class="bi bi-box-arrow-in-right text-primary"></i>
        Đăng nhập
    </h2>
    <p>Chào mừng trở lại! Vui lòng đăng nhập để tiếp tục</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="flex-row w-100 alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label fw-bold">
            <i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Username)
        </label>
        <input asp-for="Username" class="form-control form-control-lg" 
               placeholder="Nhập tên đăng nhập" autofocus />
        <span asp-validation-for="Username" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label fw-bold">
            <i class="bi bi-lock"></i> @Html.DisplayNameFor(model => model.Password)
        </label>
        <input asp-for="Password" class="form-control form-control-lg" 
               placeholder="Nhập mật khẩu" />
        <span asp-validation-for="Password" class="text-danger small"></span>
    </div>

    <div class="mb-4">
        <div class="form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">
                @Html.DisplayNameFor(model => model.RememberMe)
            </label>
        </div>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary btn-auth btn-lg">
            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
        </button>
    </div>
</form>

<div class="auth-divider">
    <span>Hoặc</span>
</div>

<div class="auth-footer">
    <p class="mb-0">
        Chưa có tài khoản? 
        <a asp-action="Register">
            <i class="bi bi-person-plus"></i> Đăng ký ngay
        </a>
    </p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
