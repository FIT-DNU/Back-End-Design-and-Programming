@model student_management.Models.Student

@{
    ViewData["Title"] = "Thêm sinh viên mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Danh sách sinh viên</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thêm mới</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-person-plus"></i> Thêm sinh viên mới
            </h1>
            <p class="text-muted">Nhập thông tin sinh viên vào form bên dưới</p>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard-data"></i> Thông tin sinh viên</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" id="createStudentForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-12">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="bi bi-person text-primary"></i> @Html.DisplayNameFor(model => model.Name)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Nhập họ và tên đầy đủ" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ClassID" class="form-label fw-bold">
                                    <i class="bi bi-building text-primary"></i> @Html.DisplayNameFor(model => model.ClassID)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="ClassID" class="form-select form-select-lg" asp-items="ViewBag.ClassID">
                                    <option value="">-- Chọn lớp học --</option>
                                </select>
                                <span asp-validation-for="ClassID" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label fw-bold">
                                    <i class="bi bi-gender-ambiguous text-primary"></i> @Html.DisplayNameFor(model => model.Gender)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Gender" class="form-select form-select-lg">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="1">Nam</option>
                                    <option value="0">Nữ</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label fw-bold">
                                    <i class="bi bi-calendar-event text-primary"></i> @Html.DisplayNameFor(model => model.DateOfBirth)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Region" class="form-label fw-bold">
                                    <i class="bi bi-geo-alt text-primary"></i> @Html.DisplayNameFor(model => model.Region)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Region" class="form-control form-control-lg" placeholder="Nhập khu vực/địa chỉ" list="regionList" />
                                <datalist id="regionList">
                                    <option value="Hà Nội"></option>
                                    <option value="Hồ Chí Minh"></option>
                                    <option value="Đà Nẵng"></option>
                                    <option value="Hải Phòng"></option>
                                    <option value="Cần Thơ"></option>
                                </datalist>
                                <span asp-validation-for="Region" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">
                                    <i class="bi bi-envelope text-primary"></i> @Html.DisplayNameFor(model => model.Email)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="example@email.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold">
                                    <i class="bi bi-telephone text-primary"></i> @Html.DisplayNameFor(model => model.PhoneNumber)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="PhoneNumber" type="tel" class="form-control form-control-lg" placeholder="0123456789" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="ImgUrl" class="form-label fw-bold">
                                    <i class="bi bi-image text-primary"></i> @Html.DisplayNameFor(model => model.ImgUrl)
                                </label>
                                <input asp-for="ImgUrl" type="url" class="form-control form-control-lg" placeholder="https://example.com/image.jpg" id="imgUrlInput" />
                                <span asp-validation-for="ImgUrl" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i> Nhập URL ảnh đại diện (tùy chọn)
                                </div>
                                <div id="imagePreview" class="mt-3" style="display:none;">
                                    <p class="small text-muted mb-2">Xem trước:</p>
                                    <img id="previewImg" src="" alt="Preview" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-12">
                                <hr class="my-4">
                                <div class="d-flex gap-3 justify-content-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                        <i class="bi bi-x-circle"></i> Hủy
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="bi bi-check-circle"></i> Thêm sinh viên
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#imgUrlInput').on('input', function() {
                var url = $(this).val();
                if (url) {
                    $('#previewImg').attr('src', url);
                    $('#imagePreview').show();
                    $('#previewImg').on('error', function() {
                        $('#imagePreview').hide();
                    });
                } else {
                    $('#imagePreview').hide();
                }
            });

            $('#createStudentForm').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
}
