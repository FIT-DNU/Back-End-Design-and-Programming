                                                    {
                                                        <img src="@Model.ImgUrl" alt="@Model.Name" class="rounded-circle shadow"
                                                             style="width: 100px; height: 100px; object-fit: cover;"
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                        <div class="student-detail-avatar-fallback rounded-circle shadow mx-auto" style="width: 100px; height: 100px; display:none;">
                                                            <span class="display-6">@(Model.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="student-detail-avatar-fallback rounded-circle shadow mx-auto" style="width: 100px; height: 100px;">
                                                            <span class="display-6">@(Model.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")</span>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div id="newImagePreview" class="text-center" style="display:none;">
                                                    <p class="small text-success mb-2">
                                                        <i class="bi bi-check-circle-fill"></i> Ảnh mới
                                                    </p>
                                                    <img id="previewImgNew" src="" alt="New Preview" class="rounded-circle shadow"
                                                         style="width: 100px; height: 100px; object-fit: cover;">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-3">
                                            <label asp-for="ImgUrl" class="form-label fw-bold">
                                                <i class="bi bi-link-45deg"></i> URL ảnh mới
                                                <span class="badge bg-secondary-subtle text-secondary ms-2">Tùy chọn</span>
                                            </label>
                                            <input asp-for="ImgUrl" type="url" class="form-control form-control-lg"
                                                   placeholder="https://example.com/image.jpg"
                                                   id="imgUrlInput"
                                                   data-original="@Model.ImgUrl" />
                                            <span asp-validation-for="ImgUrl" class="text-danger small"></span>
                                            <div class="form-text">
                                                <i class="bi bi-info-circle"></i> Nhập URL mới để thay đổi ảnh đại diện, hoặc để trống để giữ ảnh hiện tại
                                            </div>
                                        </div>

                                        <div id="imageError" class="alert alert-warning mt-3" style="display:none;">
                                            <i class="bi bi-exclamation-triangle"></i> Không thể tải ảnh từ URL này
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Name" class="form-label fw-bold">
                                    <i class="bi bi-person text-warning"></i> @Html.DisplayNameFor(model => model.Name)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg"
                                       placeholder="Nhập họ và tên đầy đủ"
                                       required
                                       data-original="@Model.Name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label fw-bold">
                                    <i class="bi bi-calendar-event text-warning"></i> @Html.DisplayNameFor(model => model.DateOfBirth)
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="DateOfBirth" type="date" class="form-control form-control-lg"
                                       id="dateOfBirth"
                                       max="@DateTime.Now.ToString("yyyy-MM-dd")"
                                       required
                                       data-original="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                <div id="ageDisplay" class="form-text">
                                    <i class="bi bi-calculator"></i> Tuổi: <strong id="calculatedAge"></strong>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label fw-bold">
                                    <i class="bi bi-gender-ambiguous text-warning"></i> @Html.DisplayNameFor(model => model.Gender)
                                    <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Gender" class="form-select form-select-lg" required data-original="@Model.Gender">
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="1">Nam</option>
                                    <option value="0">Nữ</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
