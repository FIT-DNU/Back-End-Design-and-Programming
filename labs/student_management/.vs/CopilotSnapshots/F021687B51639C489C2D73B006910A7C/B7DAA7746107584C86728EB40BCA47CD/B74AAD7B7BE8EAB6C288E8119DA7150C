@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            let hasChanges = false;
            let imageLoadTimeout;
            const changedFields = new Set();

            calculateAge($('#dateOfBirth').val());

            $('#imgUrlInput').on('input', function() {
                var url = $(this).val().trim();
                var originalUrl = $(this).data('original');

                clearTimeout(imageLoadTimeout);
                $('#imageError').hide();

                if (url && url !== originalUrl && isValidUrl(url)) {
                    imageLoadTimeout = setTimeout(function() {
                        var img = new Image();
                        img.onload = function() {
                            $('#previewImgNew').attr('src', url);
                            $('#newImagePreview').show();
                            $('#imageError').hide();
                        };
                        img.onerror = function() {
                            $('#newImagePreview').hide();
                            $('#imageError').show();
                        };
                        img.src = url;
                    }, 500);
                } else {
                    $('#newImagePreview').hide();
                }

                trackChanges();
            });

            function isValidUrl(string) {
                try {
                    new URL(string);
                    return true;
                } catch (_) {
                    return false;
                }
            }

            $('#dateOfBirth').on('change', function() {
                calculateAge($(this).val());
                trackChanges();
            });

            function calculateAge(dateValue) {
                if (!dateValue) return;

                var dob = new Date(dateValue);
                var today = new Date();
                var age = today.getFullYear() - dob.getFullYear();
                var monthDiff = today.getMonth() - dob.getMonth();

                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < dob.getDate())) {
                    age--;
                }

                if (age >= 0) {
                    $('#calculatedAge').text(age + ' tuổi');
                }
            }

            $('#editStudentForm input, #editStudentForm select').on('change input', function() {
                trackChanges();
            });

            function trackChanges() {
                changedFields.clear();
                hasChanges = false;

                $('#editStudentForm input[data-original], #editStudentForm select[data-original]').each(function() {
                    var $field = $(this);
                    var originalValue = $field.data('original')?.toString() || '';
                    var currentValue = $field.val()?.toString() || '';

                    if (originalValue !== currentValue) {
                        hasChanges = true;
                        var fieldName = $field.closest('.col-md-12, .col-md-6').find('label').first().text().trim();
                        changedFields.add(fieldName.replace('*', '').trim());
                        $field.addClass('border-warning');
                    } else {
                        $field.removeClass('border-warning');
                    }
                });

                if (hasChanges) {
                    $('#changeIndicator').show();
                    $('#submitBtn').removeClass('btn-warning').addClass('btn-success');
                    $('#submitBtn .btn-text').html('<i class="bi bi-save"></i> Lưu thay đổi');

                    var changesList = Array.from(changedFields).map(field => '<li>' + field + '</li>').join('');
                    $('#changedFieldsList').html(changesList);
                    $('#changeSummary').removeClass('d-none');
                } else {
                    $('#changeIndicator').hide();
                    $('#submitBtn').removeClass('btn-success').addClass('btn-warning');
                    $('#submitBtn .btn-text').html('<i class="bi bi-check-circle"></i> Lưu thay đổi');
                    $('#changeSummary').addClass('d-none');
                }
            }

            $('#editStudentForm').on('submit', function(e) {
                e.preventDefault();

                if (!hasChanges) {
                    alert('Không có thay đổi nào để lưu.');
                    return false;
                }

                if (!this.checkValidity()) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');

                    var firstError = $(this).find(':invalid').first();
                    if (firstError.length) {
                        $('html, body').animate({
                            scrollTop: firstError.offset().top - 100
                        }, 300);
                        firstError.focus();
                    }
                    return false;
                }

                var confirmMessage = 'Bạn có chắc chắn muốn lưu các thay đổi sau?\n\n' +
                                   Array.from(changedFields).join('\n');

                if (!confirm(confirmMessage)) {
                    return false;
                }

                $('#submitBtn .btn-text').hide();
                $('#submitBtn .btn-spinner').show();
                $('#submitBtn').prop('disabled', true);

                this.submit();
            });

            $('#resetBtn').on('click', function() {
                if (!hasChanges) {
                    alert('Không có thay đổi nào để hoàn tác.');
                    return;
                }

                if (confirm('Bạn có chắc chắn muốn hoàn tác tất cả các thay đổi?')) {
                    $('#editStudentForm input[data-original], #editStudentForm select[data-original]').each(function() {
                        $(this).val($(this).data('original'));
                    });
                    $('#editStudentForm').removeClass('was-validated');
                    $('#newImagePreview').hide();
                    $('#imageError').hide();
                    calculateAge($('#dateOfBirth').val());
                    trackChanges();
                }
            });

            $(window).on('beforeunload', function(e) {
                if (hasChanges) {
                    var message = 'Bạn có thay đổi chưa được lưu. Bạn có chắc chắn muốn rời khỏi trang này?';
                    e.returnValue = message;
                    return message;
                }
            });

            $('#cancelBtn').on('click', function(e) {
                if (hasChanges) {
                    if (!confirm('Bạn có thay đổi chưa được lưu. Bạn có chắc chắn muốn hủy?')) {
                        e.preventDefault();
                    }
                }
            });

            $('#PhoneNumber').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            trackChanges();
        });
    </script>
}
