@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            let imageLoadTimeout;

            // Image preview with loading state
            $('#imgUrlInput').on('input', function() {
                var url = $(this).val().trim();
                
                clearTimeout(imageLoadTimeout);
                $('#imageError').hide();
                $('#imagePreviewSection').hide();
                
                if (url && isValidUrl(url)) {
                    $('#imageLoadingSpinner').show();
                    $('#imagePreviewSection').show();
                    
                    imageLoadTimeout = setTimeout(function() {
                        var img = new Image();
                        img.onload = function() {
                            $('#previewImg').attr('src', url);
                            $('#imageLoadingSpinner').hide();
                            $('#imageError').hide();
                        };
                        img.onerror = function() {
                            $('#imagePreviewSection').hide();
                            $('#imageError').show();
                            $('#imageLoadingSpinner').hide();
                        };
                        img.src = url;
                    }, 500);
                }
            });

            function isValidUrl(string) {
                try {
                    new URL(string);
                    return true;
                } catch (_) {
                    return false;
                }
            }

            // Calculate and display age
            $('#dateOfBirth').on('change', function() {
                var dob = new Date($(this).val());
                var today = new Date();
                var age = today.getFullYear() - dob.getFullYear();
                var monthDiff = today.getMonth() - dob.getMonth();
                
                if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < dob.getDate())) {
                    age--;
                }
                
                if (age >= 0) {
                    $('#calculatedAge').text(age + ' tuổi');
                    $('#ageDisplay').show();
                    
                    // Validation for reasonable age
                    if (age < 16 || age > 100) {
                        $('#ageDisplay').append(' <span class="text-warning"><i class="bi bi-exclamation-triangle"></i> Vui lòng kiểm tra lại</span>');
                    }
                } else {
                    $('#ageDisplay').hide();
                }
                
                updateProgress();
            });

            // Form progress tracking
            function updateProgress() {
                var totalFields = 6; // Required fields
                var filledFields = 0;
                
                if ($('#Name').val().trim()) filledFields++;
                if ($('#dateOfBirth').val()) filledFields++;
                if ($('#Gender').val()) filledFields++;
                if ($('#Email').val().trim()) filledFields++;
                if ($('#PhoneNumber').val().trim()) filledFields++;
                if ($('#Region').val().trim()) filledFields++;
                
                var progress = (filledFields / totalFields) * 100;
                $('#formProgress').css('width', progress + '%');
            }

            // Track form changes
            $('#createStudentForm input, #createStudentForm select').on('change input', function() {
                updateProgress();
            });

            // Form validation enhancement
            $('#createStudentForm').on('submit', function(e) {
                e.preventDefault();
                
                if (!this.checkValidity()) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    
                    // Scroll to first error
                    var firstError = $(this).find(':invalid').first();
                    if (firstError.length) {
                        $('html, body').animate({
                            scrollTop: firstError.offset().top - 100
                        }, 300);
                        firstError.focus();
                    }
                    
                    return false;
                }
                
                // Show loading state
                $('#submitBtn .btn-text').hide();
                $('#submitBtn .btn-spinner').show();
                $('#submitBtn').prop('disabled', true);
                
                // Submit form
                this.submit();
            });

            // Reset button enhancement
            $('#resetBtn').on('click', function(e) {
                e.preventDefault();
                if (confirm('Bạn có chắc chắn muốn xóa tất cả dữ liệu đã nhập?')) {
                    $('#createStudentForm')[0].reset();
                    $('#createStudentForm').removeClass('was-validated');
                    $('#imagePreviewSection').hide();
                    $('#imageError').hide();
                    $('#ageDisplay').hide();
                    $('#formProgress').css('width', '0%');
                    $('#Name').focus();
                }
            });

            // Auto-focus first field
            $('#Name').focus();

            // Prevent form submission on Enter (except for textarea)
            $('#createStudentForm input').on('keypress', function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    var inputs = $('#createStudentForm input, #createStudentForm select').filter(':visible');
                    var nextIndex = inputs.index(this) + 1;
                    if (nextIndex < inputs.length) {
                        inputs.eq(nextIndex).focus();
                    }
                }
            });

            // Phone number formatting
            $('#PhoneNumber').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            // Capitalize first letter of name
            $('#Name').on('blur', function() {
                var value = $(this).val();
                if (value) {
                    var capitalized = value.split(' ')
                        .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
                        .join(' ');
                    $(this).val(capitalized);
                }
            });
        });
    </script>
}
