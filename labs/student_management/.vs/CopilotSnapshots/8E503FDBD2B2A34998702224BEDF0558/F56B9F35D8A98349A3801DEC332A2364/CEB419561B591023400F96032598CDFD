                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                <div class="student-detail-avatar-fallback rounded-circle shadow mx-auto mb-3" 
                                     style="width: 120px; height: 120px; display:none; opacity: 0.7; filter: grayscale(100%);">
                                    <span class="display-4">@(Model.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")</span>
                                </div>
                            }
                            else
                            {
                                <div class="student-detail-avatar-fallback rounded-circle shadow mx-auto mb-3" 
                                     style="width: 120px; height: 120px; opacity: 0.7; filter: grayscale(100%);">
                                    <span class="display-4">@(Model.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")</span>
                                </div>
                            }
                            <div class="position-absolute top-50 start-50 translate-middle">
                                <i class="bi bi-x-circle-fill text-danger" style="font-size: 3rem; text-shadow: 0 2px 4px rgba(0,0,0,0.3);"></i>
                            </div>
                        </div>
                        <h3 class="fw-bold text-danger mb-1">@Model.Name</h3>
