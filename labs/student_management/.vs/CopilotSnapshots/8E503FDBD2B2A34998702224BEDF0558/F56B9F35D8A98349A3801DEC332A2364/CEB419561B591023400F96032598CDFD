@section Scripts {
    <script>
        $(document).ready(function() {
            // Enable/disable delete button based on checkbox
            $('#confirmCheck').on('change', function() {
                $('#deleteBtn').prop('disabled', !this.checked);
                
                if (this.checked) {
                    $('#deleteBtn').addClass('btn-danger-pulse');
                } else {
                    $('#deleteBtn').removeClass('btn-danger-pulse');
                }
            });

            // Final confirmation before submit
            $('#deleteForm').on('submit', function(e) {
                e.preventDefault();
                
                if (!$('#confirmCheck').is(':checked')) {
                    alert('Vui lòng xác nhận bằng cách đánh dấu vào ô checkbox.');
                    return false;
                }
                
                // Show custom confirmation dialog
                var studentName = '@Model.Name';
                var confirmMessage = 'LẦN XÁC NHẬN CUỐI CÙNG!\n\n' +
                                   'Bạn có HOÀN TOÀN CHẮC CHẮN muốn xóa sinh viên "' + studentName + '" không?\n\n' +
                                   'Hành động này KHÔNG THỂ HOÀN TÁC!\n\n' +
                                   'Nhấn OK để xóa, hoặc Hủy để giữ lại.';
                
                if (confirm(confirmMessage)) {
                    // Show loading state
                    $('#deleteBtn .btn-text').hide();
                    $('#deleteBtn .btn-spinner').show();
                    $('#deleteBtn').prop('disabled', true);
                    $('#confirmCheck').prop('disabled', true);
                    
                    // Disable all buttons
                    $('button, a').addClass('disabled').prop('disabled', true);
                    
                    this.submit();
                } else {
                    // User cancelled
                    $('#confirmCheck').prop('checked', false).trigger('change');
                }
            });

            // Add visual warning animation
            setInterval(function() {
                $('.card-header.bg-danger').toggleClass('pulse-danger');
            }, 1000);

            // Warn before leaving page
            window.addEventListener('beforeunload', function(e) {
                // Don't show warning if form is being submitted
                if ($('#deleteBtn .btn-spinner').is(':visible')) {
                    return undefined;
                }
            });
        });
    </script>
}
