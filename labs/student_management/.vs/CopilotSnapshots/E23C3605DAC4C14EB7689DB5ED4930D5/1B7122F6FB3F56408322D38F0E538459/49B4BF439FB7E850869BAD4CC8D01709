@model IEnumerable<student_management.Models.Student>

@{
    ViewData["Title"] = "Quản lý sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    var totalStudents = Model.Count();
    var maleCount = Model.Count(s => s.Gender == 1);
    var femaleCount = Model.Count(s => s.Gender == 0);
    var averageAge = Model.Any() ? (int)Model.Average(s => DateTime.Now.Year - s.DateOfBirth.Year) : 0;
    var regionsCount = Model.Select(s => s.Region).Distinct().Count();
}

