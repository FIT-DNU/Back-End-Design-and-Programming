                                </div>
                            </td>
                            <td>
                                <div class="student-info">
                                    <div class="student-avatar">
                                        @if (!string.IsNullOrEmpty(item.ImgUrl))
                                        {
                                            <img src="@item.ImgUrl" alt="@item.Name" 
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                                 loading="lazy">
                                            <div class="avatar-fallback" style="display:none;">
                                                @(item.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="avatar-fallback">
                                                @(item.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                            </div>
                                        }
                                    </div>
                                    <div class="student-details">
                                        <div class="student-name" title="@item.Name">@item.Name</div>
                                        <div class="student-email d-md-none" title="@item.Email">@item.Email</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="dob-info">
                                    <div class="dob-date">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        <span class="d-none d-lg-inline">@item.DateOfBirth.ToString("dd/MM/yyyy")</span>
                                        <span class="d-lg-none">@item.DateOfBirth.ToString("dd/MM/yy")</span>
                                    </div>
                                    <div class="dob-age">
                                        @{
                                            var age = DateTime.Now.Year - item.DateOfBirth.Year;
                                            if (DateTime.Now.DayOfYear < item.DateOfBirth.DayOfYear) age--;
                                        }
                                        @age tuổi
                                    </div>
                                </div>
                            </td>
                            <td>
                                @if (item.Gender == 1)
                                {
                                    <span class="badge-gender badge-gender-male">
                                        <i class="bi bi-gender-male"></i>
                                        <span class="d-none d-xl-inline">Nam</span>
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-gender badge-gender-female">
                                        <i class="bi bi-gender-female"></i>
                                        <span class="d-none d-xl-inline">Nữ</span>
                                    </span>
                                }
                            </td>
                            <td class="d-none d-md-table-cell">
                                <div class="email-info">
                                    <i class="bi bi-envelope me-1"></i>
                                    <a href="mailto:@item.Email" title="@item.Email">@item.Email</a>
                                </div>
                            </td>
                            <td>
                                <div class="phone-info">
                                    <i class="bi bi-telephone me-1"></i>
                                    <a href="tel:@item.PhoneNumber">@item.PhoneNumber</a>
                                </div>
                            </td>
                            <td>
                                <span class="badge-region" title="@item.Region">
                                    <i class="bi bi-geo-alt me-1"></i>
                                    <span>@item.Region</span>
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                       class="btn-action-icon btn-action-info" 
