<!-- Loading Overlay -->
<div id="loadingOverlay" style="display:none;">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Đang tải...</span>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Show/hide clear search button
            $('#searchInput').on('input', function() {
                $('#clearSearch').toggle($(this).val().length > 0);
                filterTable();
            });

            $('#clearSearch').on('click', function() {
                $('#searchInput').val('');
                $(this).hide();
                filterTable();
            });

            // Filter functionality
            $('#genderFilter, #regionFilter').on('change', function() {
                filterTable();
            });

            // Sort functionality
            $('#sortBy').on('change', function() {
                sortTable($(this).val());
            });

            // Clear filter
            $('#clearFilter, #clearFilterFromNoResults').on('click', function() {
                $('#searchInput').val('');
                $('#genderFilter').val('');
                $('#regionFilter').val('');
                $('#sortBy').val('name-asc');
                $('#clearSearch').hide();
                filterTable();
                sortTable('name-asc');
            });

            // Refresh button
            $('#refreshBtn').on('click', function() {
                $(this).find('i').addClass('spin-animation');
                setTimeout(() => {
                    location.reload();
                }, 500);
            });

            function filterTable() {
                var searchTerm = $('#searchInput').val().toLowerCase();
                var genderFilter = $('#genderFilter').val();
                var regionFilter = $('#regionFilter').val();
                var visibleCount = 0;
                var hasFilters = searchTerm !== '' || genderFilter !== '' || regionFilter !== '';

                $('.student-row').each(function() {
                    var $row = $(this);
                    var name = $row.data('name') || '';
                    var email = $row.data('email') || '';
                    var phone = $row.data('phone') || '';
                    var gender = $row.data('gender').toString();
                    var region = $row.data('region') || '';

                    var matchSearch = searchTerm === '' || 
                                    name.includes(searchTerm) || 
                                    email.includes(searchTerm) || 
                                    phone.includes(searchTerm);
                    
                    var matchGender = genderFilter === '' || gender === genderFilter;
                    var matchRegion = regionFilter === '' || region === regionFilter;

                    if (matchSearch && matchGender && matchRegion) {
                        $row.show();
                        visibleCount++;
                        $row.find('.row-number').text(visibleCount);
                    } else {
                        $row.hide();
                    }
                });

                $('#visibleCount').text(visibleCount);
                
                // Show/hide no results state
                if (visibleCount === 0 && hasFilters) {
                    $('#noResultsState').show();
                    $('#tableBody').parent().hide();
                } else {
                    $('#noResultsState').hide();
                    $('#tableBody').parent().show();
                }

                // Update filter status
                if (hasFilters) {
                    var filterParts = [];
                    if (searchTerm) filterParts.push('tìm kiếm: "' + searchTerm + '"');
                    if (genderFilter) filterParts.push('giới tính: ' + (genderFilter === '1' ? 'Nam' : 'Nữ'));
                    if (regionFilter) filterParts.push('khu vực: ' + regionFilter);
                    
                    $('#filterMessage').text('Đang lọc theo ' + filterParts.join(', '));
                    $('#filterStatus').show();
                } else {
                    $('#filterStatus').hide();
                }
            }

            function sortTable(sortBy) {
                var rows = $('.student-row').get();
                
                rows.sort(function(a, b) {
                    var aVal, bVal;
                    
                    switch(sortBy) {
                        case 'name-asc':
                            aVal = $(a).data('name');
                            bVal = $(b).data('name');
                            return aVal.localeCompare(bVal);
                        case 'name-desc':
                            aVal = $(a).data('name');
                            bVal = $(b).data('name');
                            return bVal.localeCompare(aVal);
                        case 'date-asc':
                            aVal = new Date($(a).data('dob'));
                            bVal = new Date($(b).data('dob'));
                            return aVal - bVal;
                        case 'date-desc':
                            aVal = new Date($(a).data('dob'));
                            bVal = new Date($(b).data('dob'));
                            return bVal - aVal;
                    }
                });
                
                $.each(rows, function(index, row) {
                    $('#tableBody').append(row);
                });
                
                // Renumber visible rows
                var visibleCount = 0;
                $('.student-row:visible').each(function() {
                    visibleCount++;
                    $(this).find('.row-number').text(visibleCount);
                });
            }

            // Smooth scroll to top
            $('a[asp-action]').on('click', function(e) {
                if ($(this).attr('asp-action') === 'Create') {
                    $('#loadingOverlay').fadeIn(200);
                }
            });

            // Add hover effect to rows
            $('.student-row').hover(
                function() { $(this).addClass('table-row-hover'); },
                function() { $(this).removeClass('table-row-hover'); }
            );
        });
    </script>
}
