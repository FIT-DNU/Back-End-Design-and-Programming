            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-4 col-lg-3">
                            <label class="form-label small fw-bold text-muted mb-1">
                                <i class="bi bi-search"></i> Tìm kiếm
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-white">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" id="searchInput" class="form-control" placeholder="Tên, email, SĐT..." autocomplete="off">
                                <button class="btn btn-outline-secondary" type="button" id="clearSearch" style="display:none;">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small fw-bold text-muted mb-1">
                                <i class="bi bi-gender-ambiguous"></i> Giới tính
                            </label>
                            <select id="genderFilter" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="1">Nam</option>
                                <option value="0">Nữ</option>
                            </select>
                        </div>
                        <div class="col-md-3 col-lg-2">
                            <label class="form-label small fw-bold text-muted mb-1">
                                <i class="bi bi-geo-alt"></i> Khu vực
                            </label>
                            <select id="regionFilter" class="form-select">
                                <option value="">Tất cả</option>
                                @foreach (var region in Model.Select(m => m.Region).Distinct().OrderBy(r => r))
                                {
                                    <option value="@region">@region</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2 col-lg-2">
                            <label class="form-label small fw-bold text-muted mb-1">
                                <i class="bi bi-sort-down"></i> Sắp xếp
                            </label>
                            <select id="sortBy" class="form-select">
                                <option value="name-asc">Tên A-Z</option>
                                <option value="name-desc">Tên Z-A</option>
                                <option value="date-asc">Ngày sinh cũ nhất</option>
                                <option value="date-desc">Ngày sinh mới nhất</option>
                            </select>
                        </div>
                        <div class="col-md-12 col-lg-3">
                            <div class="d-flex gap-2">
                                <button id="clearFilter" class="btn btn-outline-secondary flex-fill">
                                    <i class="bi bi-x-circle"></i> Xóa bộ lọc
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Results Info Bar -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <i class="bi bi-list-check"></i> Hiển thị 
                    <strong id="visibleCount">@Model.Count()</strong> / 
                    <strong id="totalCount">@Model.Count()</strong> sinh viên
                </div>
                <div id="filterStatus" class="small text-primary" style="display:none;">
                    <i class="bi bi-funnel-fill"></i> <span id="filterMessage"></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Table Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0" id="studentsTable">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th class="ps-4" style="width: 60px;">STT</th>
                                    <th style="min-width: 200px;">@Html.DisplayNameFor(model => model.Name)</th>
                                    <th style="min-width: 120px;">@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                                    <th style="min-width: 100px;">@Html.DisplayNameFor(model => model.Gender)</th>
                                    <th style="min-width: 200px;">@Html.DisplayNameFor(model => model.Email)</th>
                                    <th style="min-width: 130px;">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                    <th style="min-width: 120px;">@Html.DisplayNameFor(model => model.Region)</th>
                                    <th class="text-center pe-4" style="min-width: 160px;">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="tableBody">
                                @{ var index = 1; }
                                @foreach (var item in Model)
                                {
                                    <tr class="student-row"
                                        data-name="@item.Name?.ToLower()"
                                        data-email="@item.Email?.ToLower()"
                                        data-phone="@item.PhoneNumber"
                                        data-gender="@item.Gender"
                                        data-region="@item.Region"
                                        data-dob="@item.DateOfBirth.ToString("yyyy-MM-dd")">
                                        <td class="ps-4 fw-bold text-muted">
                                            <span class="row-number">@index</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle me-3">
                                                    @if (!string.IsNullOrEmpty(item.ImgUrl))
                                                    {
                                                        <img src="@item.ImgUrl" alt="@item.Name" class="avatar-img" 
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                                             loading="lazy">
                                                        <div class="avatar-fallback" style="display:none;">
                                                            @(item.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="avatar-fallback">
                                                            @(item.Name?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                                        </div>
                                                    }
                                                </div>
                                                <div>
                                                    <div class="fw-bold">@item.Name</div>
                                                    <div class="text-muted small d-md-none">@item.Email</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <i class="bi bi-calendar-event text-muted me-1"></i>
                                            <span class="d-none d-lg-inline">@item.DateOfBirth.ToString("dd/MM/yyyy")</span>
                                            <span class="d-lg-none">@item.DateOfBirth.ToString("dd/MM/yy")</span>
                                            <div class="text-muted small">
                                                @{
                                                    var age = DateTime.Now.Year - item.DateOfBirth.Year;
                                                    if (DateTime.Now.DayOfYear < item.DateOfBirth.DayOfYear) age--;
                                                }
                                                (@age tuổi)
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.Gender == 1)
                                            {
                                                <span class="badge bg-primary-subtle text-primary">
                                                    <i class="bi bi-gender-male"></i> Nam
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger-subtle text-danger">
                                                    <i class="bi bi-gender-female"></i> Nữ
                                                </span>
                                            }
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <i class="bi bi-envelope text-muted me-1"></i>
                                            <a href="mailto:@item.Email" class="text-decoration-none text-truncate d-inline-block" style="max-width: 200px;" title="@item.Email">
                                                @item.Email
                                            </a>
                                        </td>
                                        <td>
                                            <i class="bi bi-telephone text-muted me-1"></i>
                                            <a href="tel:@item.PhoneNumber" class="text-decoration-none">@item.PhoneNumber</a>
                                        </td>
                                        <td>
                                            <i class="bi bi-geo-alt text-muted me-1"></i>
                                            <span class="badge bg-light text-dark border">@item.Region</span>
                                        </td>
                                        <td class="text-center pe-4">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" 
                                                   class="btn btn-outline-info" 
                                                   title="Xem chi tiết"
                                                   data-bs-toggle="tooltip">
                                                    <i class="bi bi-eye"></i>
